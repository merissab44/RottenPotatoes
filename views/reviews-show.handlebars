
<a href="/">Back to Home</a>
<h1>Reviews</h1>
<div class="row">
{{#each review}}
<div class="col-sm-6 col-sm-offset-3">
<h1>{{this.title}}</h1>
<h2>{{this.movieTitle}}</h2>
<p>{{this.description}}</p>
</div>
<p><a href="/reviews/{{{this._id}}}/edit">Edit</a></p>
<p><form method="POST" action="/reviews/{{{this._id}}}?_method=DELETE">
    <button type="submit">Delete</button>
{{/each}}

{{!-- show comment form --}}
{{> comment-form}}

<hr>

{{#each comments}}
{{> comment}}
{{/each}}
</div>
